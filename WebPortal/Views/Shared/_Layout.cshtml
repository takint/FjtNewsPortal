<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VNToday - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("PageStyles", required: false)
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-3 col-md-3 col-sm-6 d-flex">
                    <!--Will be managed on admin-->
                    <div class="portal-logo-box">
                        <img src="~/assets/portal-top-logo.png" />
                    </div>
                </div>
                <div class="col-8 col-md-8 col-sm-6">
                    <!--Will be managed on admin-->
                    <div class="top-banner-box">
                        <img src="~/assets/top-banner-adv.png" />
                    </div>
                </div>
            </div>
        </div>
        <nav class="nav nav-fill justify-content-center align-items-center portal-top-menu">
            <div class="d-flex justify-content-between w-75">
                <a href="/"><img src="~/assets/home-icon.png"></a>
                <a href="/">Tin tức</a>
                <a href="/">Thời sự</a>
                <a href="/">Thế giới</a>
                <a href="/">Kinh doanh</a>
                <a href="/">Giải trí</a>
                <a href="/">Thể thao</a>
                <a href="/">Pháp luật</a>
                <a href="/">Giáo dục</a>
                <a href="/">Sức khỏe</a>
                <a href="/">Du lịch</a>
                <a href="/">Khoa học</a>
                <a href="/">Diễn đàn</a>
                <a href="/">Search icon</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-3">
                <img src="~/assets/vntoday-logo.png" />
            </div>
            <div class="col-9 d-flex flex-column justify-content-center">
                <div class="row border-top">
                    <div class="col-3 border-right mt-3"></div>
                    <div class="col-3 mt-3">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </p>
                    </div>
                    <div class="col-3 mt-3">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </p>
                    </div>
                    <div class="col-3 mt-3">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container-fluid portal-footer-box">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-6 d-flex">
                        <!--Will be managed on admin-->
                        <div class="portal-logo-box">
                            <img src="~/assets/portal-foot-logo.png" />
                        </div>
                    </div>
                    <div class="col-8 col-md-8 col-sm-6">
                        <div class="footer-menu-box">
                            <div class="row">
                                <div class="col-2"><a href="/">Tin tức</a></div>
                                <div class="col-2"><a href="/">Thời sự</a></div>
                                <div class="col-2"><a href="/">Thế giới</a></div>
                                <div class="col-2"><a href="/">Kinh doanh</a></div>
                                <div class="col-2"><a href="/">Giải trí</a></div>
                                <div class="col-2"><a href="/">Thể thao</a></div>
                            </div>
                            <div class="row">
                                <div class="col-2"><a href="/">Pháp luật</a></div>
                                <div class="col-2"><a href="/">Giáo dục</a></div>
                                <div class="col-2"><a href="/">Sức khỏe</a></div>
                                <div class="col-2"><a href="/">Du lịch</a></div>
                                <div class="col-2"><a href="/">Khoa học</a></div>
                                <div class="col-2"><a href="/">Diễn đàn</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
